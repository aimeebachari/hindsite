<div class="row container">
  <div class="event-show columns large-6 small-12">
    <h1> <%= @event.name %> </h1>

    <div id="event-details">
      <p><%= @event.date %></p>
      <p> <%= @event.address %> </p>
      <p> <%= @event.city %>, <%= @event.state %>, <%= @event.zip_code %> </p>
      <p><%= @event.description %></p>
    </div>

    <% if @user.id == @event.user_id || @user.admin? %>
      <div>
        <%= link_to 'Edit Event', edit_event_path(@event) %>
      </div>
    <% end %>

    <div>
      <%= link_to 'Add Review', new_event_review_path(@event) %>
    </div>

    <div class="row container columns large-6 small-12">
      <div id="ReviewList">
        <% @reviews.each do |review| %>
          <p><%= review.body %>
            <% if @user.id == review.user_id || @user.admin? %>
              <%= link_to 'Edit Review', edit_event_review_path(review) %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>

  </div>
</div>
