<%= form_for(@event) do |f| %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Historical Event or Place Name" %>
</div>

<div class="field">
  <%= f.label :date %>
  <%= f.text_field :date, placeholder: "Date" %>
</div>

<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address, placeholder: "Enter Address, City, State, and Zipcode" %>
</div>

<div class="field">
  <%= f.label :description %>
  <%= f.text_field :description, placeholder: "Description" %>
</div>

<div class="field">
  <%= f.label :image %>
  <%= f.text_field :image %>
</div>

<div class="actions">
  <%= f.submit(value="Add Event") %>
</div>

<% end %>
