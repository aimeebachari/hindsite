<%= form_for(@event) do |f| %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :date %>
  <%= f.text_field :date %>
</div>

<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :city %>
  <%= f.text_field :city %>
</div>

<div class="field">
  <%= f.label :state %>
  <%= f.text_field :state %>
</div>

<div class="field">
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>
</div>

<div class="field">
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>

<div class="field">
  <%= f.label :image %>
  <%= f.text_field :image %>
</div>

<div class="actions">
  <%= f.submit(value="Add Event") %>
</div>

<% end %>
